<aside class="left">
	<ul>	
		<li>
			<a onclick="switchMenu($(this).next())">文章管理<img src="Public/Home/images/menu_dropdown-arrow.png" /></a>
			<dl>
				<dt class="{if $cur_nav eq 'list'}on{/if}"><a href="{U('Article/index?method=list')}">文章列表</a></dt>
				<dt class="{if $cur_nav eq 'pickup'}on{/if}"><a href="{U('Article/pickup')}">文章采集</a></dt>
				<dt class="{if $cur_nav eq 'keyword'}on{/if}"><a href="{U('Article/keyword')}">关键词</a></dt>
			</dl>
		</li>
		<li>
			<a onclick="switchMenu($(this).next())">小程序内容<img src="Public/Home/images/menu_dropdown-arrow.png" /></a>
			<dl>
				{foreach from=$apps key=key item=item}
					{if cookie('user_type') eq 1 or cookie('appid') eq $item['id']}
					<dt class="{if $cur_nav eq $item['id']}on{/if}">
						<a href="index.php?m=Home&c=Article{$item['id']}&a=index&method=list&table={$item['app_id']}">{$item['cn_name']}</a>
					</dt>
					{/if}
				{/foreach}		
			</dl>
		</li>

		<li>
			<a onclick="switchMenu($(this).next())">广告配置<img src="Public/Home/images/menu_dropdown-arrow.png" /></a>
			<dl>
				<dt class="{if $cur_nav eq 'simple_ad_List'}on{/if}"><a href="{U('AdConfig/adConfig?method=list')}">广告信息</a></dt>
			</dl>
		</li>
		{if cookie('user_type') eq 1}
		<li>
			<a onclick="switchMenu($(this).next())">小程序管理<img src="Public/Home/images/menu_dropdown-arrow.png" /></a>
			<dl>
				<dt class="{if $cur_nav eq 'list'}on{/if}"><a href="{U('WeChat/index?method=list')}">小程序列表</a></dt>
			</dl>
		</li>		
		<li>
			<a onclick="switchMenu($(this).next())">系统管理<img src="Public/Home/images/menu_dropdown-arrow.png" /></a>
			<dl>
				<dt class="{if $cur_nav eq 'list'}on{/if}"><a href="{U('User/index?method=list')}">用户列表</a></dt>
			</dl>
		</li>
		{/if}
	</ul>
</aside>
<script type="text/javascript" src="Public/Common/js/jquery.cookie.js"></script>
<script type="text/javascript">
	function switchMenu(obj){
		//初始化效果
		$('.left dl').slideUp();
		$('.left dl').prev().removeClass('selected');
		$('.left dl dt').removeClass('on');
		//切换
		if(obj.css('display')=='none'){
			obj.slideDown();
			obj.prev().addClass('selected');
			//设置cookie
			var len=$('.left li').length;
			for(var i=0;i<len;i++){
				if($('.left li:eq('+i+') dl').prev().attr('class')=='selected'){
					$.cookie('selected', i,{ path: '/' });
				}
			}
		}else{
			obj.slideUp();
			$('.left dl').prev().removeClass('selected');
			$.cookie('selected',null);
		}
	}
	$('.left li:eq('+$.cookie('selected')+') dl').css('display','block');	//读取cookie
	$('.left li:eq('+$.cookie('selected')+') dl').prev().addClass('selected');
</script>