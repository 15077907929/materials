<view class="_container">
    <image class="_image" mode="aspectFit" src="{{images_url}}"></image>
    <view class="_line">
        <text class="_text">边数(N):</text>
        <input bindinput="_N_value" class="_input" type="digit" value="{{_N_value}}"></input>
    </view>
    <view class="_line">
        <text class="_text">边(a):</text>
        <input bindinput="_a_value" class="_input" type="digit" value="{{_a_value}}"></input>
    </view>
    <view class="_line">
        <text class="_text" style="color: red; ">或输入</text>
    </view>
    <view class="_line">
        <text class="_text">边数(N):</text>
        <input bindinput="bian_N_value" class="_input" type="digit" value="{{bian_N_value}}"></input>
    </view>
    <view class="_line">
        <text class="_text">半径(r):</text>
        <input bindinput="_r_value" class="_input" type="digit" value="{{_r_value}}"></input>
    </view>
    <button bindtap="click_jisuan" class="button" hoverClass="button_hover" size="default" type="default">计  算</button>
    <view class="_line">
        <text>面积(A)=</text>
        <view>{{result}}</view>
    </view>
    <text style="opacity:{{error?1:0}}">你的输入不正确！</text>
</view>
