<view class="_container">
    <image class="_image" mode="aspectFit" src="{{images_url}}"></image>
    <view class="_line">
        <text class="_text">a:</text>
        <input bindinput="_a_value" class="_input" type="digit" value="{{_a_value}}"></input>
    </view>
    <view class="_line">
        <text class="_text">b:</text>
        <input bindinput="_b_value" class="_input" type="digit" value="{{_b_value}}"></input>
    </view>
    <view class="_line">
        <text class="_text">c:</text>
        <input bindinput="_c_value" class="_input" type="digit" value="{{_c_value}}"></input>
    </view>
    <button bindtap="click_jisuan" class="button" hoverClass="button_hover" size="default" type="default">计  算</button>
    <view class="_line">
        <text>根 x1=</text>
        <view>{{result_1}}</view>
    </view>
    <view class="_line">
        <text>根 x2=</text>
        <view>{{result_2}}</view>
    </view>
    <text style="opacity:{{error?1:0}}">你的输入不正确！</text>
</view>
