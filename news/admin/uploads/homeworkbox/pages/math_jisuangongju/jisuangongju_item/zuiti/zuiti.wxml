<view class="_container">
    <image class="_image" mode="aspectFit" src="{{images_url}}"></image>
    <view class="_line">
        <text class="_text">半径(r):</text>
        <input bindinput="_r_value" class="_input" type="digit" value="{{_r_value}}"></input>
    </view>
    <view class="_line">
        <text class="_text">高(h):</text>
        <input bindinput="_h_value" class="_input" type="digit" value="{{_h_value}}"></input>
    </view>
    <button bindtap="click_jisuan" class="button" hoverClass="button_hover" size="default" type="default">计   算</button>
    <view class="_line">
        <text>体积(V)=</text>
        <view>{{result_1}}</view>
    </view>
    <view class="_line">
        <text>侧面面积(A)=</text>
        <view>{{result_2}}</view>
    </view>
    <text style="opacity:{{error?1:0}}">你的输入不正确！</text>
</view>
