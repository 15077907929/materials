/* pages/collect/collect.wxss */
.note{ text-align: center; background: #f2f2f2; padding: 5px 0; }

.list{ background: #f2f2f2; margin-left: 10px;}
.item{ margin-bottom: 10px; }
.list .pic{ width: 45%; height: 150px; }
.list .pic image{ width: 100%; height: 150px; border-radius: 10px;}
.list .info{ width: 55%; background: #fff; height: 150px; }
.list .info .tit{ padding: 8px 8px; font-size: 20px; }
.list .info .date{ padding: 5px 0 0; font-size: 15px; color:#999; border-top: 1px solid #999; margin: 0 8px; }
.list .info .btn{ padding: 15px 22px 5px; }
.list .info .btn text{ border-radius: 5px; text-align: center; font-size: 16px; display: inline-block; width: 45%; padding: 3px 0; }
.list .info .btn .share-btn{ height: 30px; font-size: 16px; line-height: 25px; }
.list .info .d{  border: 1px solid #ccc; color:#ccc; }
.list .info .s{  border: 1px solid #ee5253; color:#ee5253; }


